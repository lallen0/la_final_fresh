<div>
  <div>
    <h1>
      Court #<%= @the_court.id %> details
    </h1>

    <div>
      <div>
        <a href="/courts">
          Go back
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Location
      </dt>
      <dd>
        <%= @the_court.location_id %>
      </dd>

      <dt>
        Reservations count
      </dt>
      <dd>
        <%= @the_court.reservations_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_court.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_court.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<h2>List of Reservations at Court# <%= @the_court.id %></h2>

<table border="1">
  <tr>
    <th>
      Date
    </th>

    <th>
      Time
    </th>

    <th>
      Reserver
    </th>

    <th>
      Available
    </th>

    <th>
      Modify Reservation
    </th>

  </tr>

  <% @the_court.reservations.each do |timeslot| %>
  <tr>

    <td>
      <%= timeslot.date %>
    </td>

    <td>
      <%= timeslot.time.strftime("%-l:%M %p")%>
    </td>

    <td>
      <%= timeslot.reserver_id %>
    </td>

    <td>
      <%= timeslot.available %>
    </td>

<% if timeslot.available == TRUE %>

      <td>
              <a href="/reserve_timeslot/<%= timeslot.id %>">
              Reserve
      </a>
    </td>

<% elsif session[:user_id] == timeslot.reserver_id %>

    <td>
              <a href="/release_timeslot/<%= timeslot.id %>">
              Release Reservation
      </a>
    </td>
     <% else %>
    <td>
      Already Reserved
    </td>
  <% end %>
 
  </tr>

  <% end %>
</table>
